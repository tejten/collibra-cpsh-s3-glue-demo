{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "glue:CreateCrawler",
        "glue:UpdateCrawler",
        "glue:DeleteCrawler",
        "glue:GetCrawler",
        "glue:GetCrawlers",
        "glue:StartCrawler",
        "glue:StopCrawler",
        "glue:GetDatabases",
        "glue:GetDatabase",
        "glue:CreateDatabase",
        "glue:DeleteDatabase",
        "glue:GetTables",
        "glue:GetTable"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::<YOUR-ACCOUNT-ID>:role/collibra-glue-crawler-role"
    }
  ]
}